<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="PawrkingSample.Pages.HomePage"
             Title="Home Page"
             NavigationPage.HasBackButton="False">
    <ContentPage.Content/>
    <StackLayout Spacing="10">
        <Label/>
        <Image 
                    Source="PawParkingLog.png"
                     />
        <Label/>
        <Button
                    x:Name="SeeAllLotsButton"
                    Text="See All Lots"
                    Command="{Binding SeeAllLotsClicked}"
                    BackgroundColor="White"
                    />
        <Label/>
        <Button
                    x:Name="SeeParkingReservationsButton"
                    Text="See Parking Reservations"
                    Command="{Binding SeeParkingReservationsClicked}"
                    BackgroundColor="White"
                    />
        <Label/>
        <Button
                    x:Name="CreateParkingLot_Button"
                    Text="Create Parking Lot"
                    Command="{Binding CreateParkingLotClicked}"
                    BackgroundColor="White"/>
        <Label
                    x:Name="SpacingLabel"
                    />
        <Button
                    x:Name="LogOutButton"
                    Text="Log Out"
                    Command="{Binding LogoutCommand}"
                    BackgroundColor="White"
                />
    </StackLayout>

</ContentPage>